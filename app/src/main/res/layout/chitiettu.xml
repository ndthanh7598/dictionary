<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E8E8"
    android:id="@+id/chitiet">

    <include layout="@layout/custome_toolbar"
        android:id="@+id/Toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/Toolbar"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="7dp"
        android:background="#FFFFFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếng Anh: "
            android:textColor="#111111"
            android:textSize="18dp"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3333FF"
            android:textSize="20dp"
            android:paddingTop="8dp"
            android:paddingRight="5dp"
            android:text="New Text"
            android:id="@+id/tvdTienganh"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingTop="8dp"
            android:paddingLeft="5dp"
            android:text="phát âm"
            android:id="@+id/tvPhatam"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvdTienganh"
            android:layout_toEndOf="@+id/tvdTienganh"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/imgLoa"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_alignTop="@+id/tvdTienganh"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:text="Nghĩa: "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textColor="#111111"
            android:textSize="17dp"
            android:id="@+id/textView3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#6c6ce9"
            android:textSize="18dp"
            android:paddingTop="8dp"
            android:paddingRight="5dp"
            android:text="Nghĩa"
            android:id="@+id/tvdTiengviet"
            android:layout_below="@+id/tvdTienganh"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"/>
        <TextView
            android:id="@+id/tvLoaitu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvdTiengviet"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:text="Loại từ"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLoaitu"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:text="Ví dụ:"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:text="Exam"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="italic"/>
    </RelativeLayout>

</RelativeLayout>