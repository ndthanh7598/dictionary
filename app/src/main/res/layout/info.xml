<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/custome_toolbar"
        android:id="@+id/Toolbar" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TỪ ĐIỂN ANH VIỆT"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <ImageView
        android:layout_width="145dp"
        android:layout_height="129dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_launcher_info"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đề tài"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xây dựng từ điển tiếng Anh"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textStyle="normal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giảng viên hướng dẫn: Mai Thị Thúy Hà"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/txtThongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành viên nhóm:"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="Nguyễn Duy Thành - 16A01"
        android:textColor="#000000"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="Đỗ Thị Tuyên - 16A01"
        android:textColor="#000000"
        android:textSize="15dp"/>
</LinearLayout>